{
  "name": "pipedrive-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Pipedrive API integration",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "pipedrive-mcp-server": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "pipedrive",
    "mcp",
    "api",
    "claude",
    "cursor",
    "modelcontextprotocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "pipedrive": "^16.0.0",
    "winston": "^3.10.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WillDent/pipedrive-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/WillDent/pipedrive-mcp-server/issues"
  },
  "homepage": "https://github.com/WillDent/pipedrive-mcp-server#readme",
  "smithery": {
    "type": "mcp-server",
    "configSchema": {
      "pipedriveApiToken": {
        "type": "string",
        "description": "Your Pipedrive API token",
        "required": true
      }
    }
  }
} 